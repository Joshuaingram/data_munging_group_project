# User Interface File for Flare Detection App V2
library(shiny)
library(ggplot2)
library(latex2exp)
library(gridExtra)
library(tidyverse)
library(pracma)
library(shinybusy)
source(file = "source_scripts/mu_data_simulation_functionsV2.R")
source(file = "source_scripts/mu_likelihood_functionsV2.R")
source(file = "user_interface/home_tab.R")
source(file = "user_interface/theoretical_tab.R")
source(file = "user_interface/modelfitting_tab.R")


ui <- fluidPage(
  
  withMathJax(),
  
  # title
  titlePanel("Modeling Solar Flare Energy Distributions", windowTitle = "Solar Flare"),
  
  # tabsetPanel allows for multiple tabPanels that contain their own sidebarLayouts and mainPanels
  tabsetPanel(
    
    # Tab for Home page
    home_tab,
    
    # Tab for Theoretical Model page
    theoretical_tab,
    
    # Tab for Model Fitting page
    modelfitting_tab
    
  )
  
)